<h1><%= @home.title %></h1>
<hr />

<h3>Price: <%= @home.price %></h3>
<ul>
  <li>Square Feet: <%= @home.sq_ft %></li>
  <li>Bedrooms: <%= @home.bedroom %></li>
  <li>Bath: <%= @home.bath %></li>
  <li>Year Built: <%= @home.year %></li>
  <li>Garage: <%= 'Yes' if @home.garage %></li>
  <li>Pool: <%= 'Yes' if @home.pool %></li>
</ul>


<% if @address %>
  <button type='button'>
  <%= link_to 'See Address', seller_home_address_path(@seller, @home, @address) %>
  </button>
<% else %>
<button type='button'>
<%= link_to 'Add Address', new_seller_home_address_path(@seller, @home) %>
  
  </button>
<% end %>

<hr />
<button type='button'>
<%= link_to 'Edit Home', edit_seller_home_path(@seller, @home) %>
</button>
<hr />
<button type='button'>
<%= link_to 'Delete Home', seller_home_path(@seller, @home), method: :delete %>
</button>